<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121323"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Horário grande -->
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:33"
            android:textColor="#FFFFFF"
            android:textSize="72sp"
            android:textStyle="normal"
            android:layout_marginTop="10dp"/>

        <!-- Data -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ter., 23 dez."
            android:textColor="#B8BBFF"
            android:textSize="18sp"
            android:layout_marginTop="10dp" />

        <!-- Nome do alarme -->
        <TextView
            android:id="@+id/tvLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alarme"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp" />

        <!-- Espaçador para empurrar botões para baixo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Botão X (parar) -->
        <Button
            android:id="@+id/btnStop"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:text="X"
            android:textSize="26sp"
            android:textStyle="bold"
            android:backgroundTint="#FFFFFF"
            android:textColor="#3F3DFF"
            android:layout_marginBottom="26dp" />

        <!-- Soneca -->
        <Button
            android:id="@+id/btnSnooze"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:text="Adiar 5 minutos"
            android:textSize="16sp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:backgroundTint="#2A2B4B"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

    </LinearLayout>

</FrameLayout>
